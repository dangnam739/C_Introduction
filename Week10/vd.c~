#include<stdio.h>
#define column 3
#define row 5

int main(){
	int a[row][column]={0,1};	
	int	i, j, k, rw, col;
	int b[row][column];

	printf("\n\tChon hang ban muon bat den: "); scanf("%d", &rw);
			for (i=0; i<column; i++){
				if(i==rw)
					for (j=0; j<row; j++) a[i][j] = 1;
				else
					for (j=0; j<row; j++) a[i][j] = 0;
			}

			for(i=0; i<column; i++){
				printf("===================\n");
				for(j=0; j<row; j++){
					
					printf("|  %1d  ", a[i][j]);
				}
				printf("|\n");
			}

			return 0;
}
