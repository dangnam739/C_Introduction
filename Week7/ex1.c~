#include<stdio.h>

int main()
{


	//in ra tam giac can co chieu cao la h
	int h, i, j;
	printf("Nhap chieu cao cua tam giac can ve h= ");
	scanf("%d", &h);
	for(i=1; i<=h; i++){
		for(j= 1; j<=2h-1; j++) {
			if((h-i+1)<=j<=(h+i-1)) printf("*");
			else printf(" ");
		}
		printf("\n");
	}


	return 0;
}
